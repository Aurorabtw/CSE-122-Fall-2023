#include <iostream>
#include <string>

using namespace std;

string getAbbreviation(const string& word) {
    int len = word.length();
    if (len > 10) {
        return word[0] + to_string(len - 2) + word[len - 1];
    } else {
        return word;
    }
}

int main() {
    int n;
    cin >> n;
    cin.ignore(); // Ignore the newline character after reading 'n'

    for (int i = 0; i < n; i++) {
        string word;
        getline(cin, word);
        cout << getAbbreviation(word) << endl;
    }

    return 0;
}
